<div class="container " id="div-crear-anime">
    <div class="card " id="card-form-crear">
        <div class="card-body" id="card-form-crear-content">
            <form id="crear-anime-formulario">
                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre Anime</label>
                    <input type="text" name="nombre" required="true" class="form-control" id="nombre"
                        aria-describedby="nombre">
                </div>
                <div class="mb-3">
                    <label for="anio" class="form-label">Año</label>
                    <input type="number" name="anio" class="form-control" required="true" id="anio" min="1900"
                        max="2023">
                </div>
                <div class="mb-3">
                    <label for="autor" class="form-label">Autor</label>
                    <input type="text" name="autor" class="form-control" required="true" id="autor">
                </div>
                <div class="mb-3">
                    <label for="genero" class="form-label">Género</label>
                    <input type="text" name="genero" class="form-control" required="true" id="genero">
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-secondary" id="boton-crear-anime">Enviar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="/swet/sweetalert2.all.min.js"></script>
<script src="/script/crear-export-hbs.js"></script>